{% extends "default.twig" %}
{% block content %}
    <header class="grid__unit grid__unit--1-4 u-mobile-hr headline">
        <h1>{{ title }}</h1>        
    </header>
    
    {% for playlist in playlists.eclectic %}
        {% if loop.index is divisible by(4) or loop.first %}
            <div class="grid__unit">
        {% else %}
            <div class="grid__unit">
        {% endif %}
            <iframe src="https://open.spotify.com/embed/playlist/{{ playlist.id }}" width="100%" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>
    {% endfor %}
 
{% endblock %}